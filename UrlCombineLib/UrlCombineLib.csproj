<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard1.0</TargetFrameworks>
    <PackageId>UrlCombine</PackageId>
    <PackageVersion>2.0.0</PackageVersion>
    <Authors>Jean Lourenço</Authors>
    <Title>UrlCombine</Title>
    <Description>C# util for combining Url paths. Works similarly to Path.Combine.</Description>
    <Copyright>Copyright 2017</Copyright>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/jean-lourenco/UrlCombine</PackageProjectUrl>
    <PackageTags>url combine merge util uri</PackageTags>
    <PackageReleaseNotes>Package namespace chaged to UrlCombineLib due to naming conflicts. The package now targets netstandard1.0 instead of 1.6.</PackageReleaseNotes>
    <RootNamespace>UrlCombineLib</RootNamespace>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


</Project>